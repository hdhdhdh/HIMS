<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--实现的哪个接口呢？ 填入namespace，这个xml是这个接口的实现类-->
<mapper namespace="com.whut.dao.IDoctorDao" >
    <select id="findDoctor" resultType="doctor">
        select * from tb_doctor where d_id=#{d_id}
    </select>
    <select id="findAllDoctor" resultType="doctor">
        select * from tb_doctor
    </select>
    <delete id="deleteDoctor">
        delete from tb_doctor where d_id=#{d_id}
    </delete>
    <insert id="addDoctor" parameterType="doctor">
        insert into tb_doctor(d_id,t_id,d_title,d_gender,d_birthday,dp_id,d_password,d_name)
        value (#{d_id},#{t_id},#{d_title},#{d_gender},#{d_birthday},#{dp_id},#{d_password},#{d_name})
    </insert>
    <update id="updateDoctor" parameterType="doctor">
        update tb_doctor
        set t_id=#{t_id},d_title=#{d_title},d_gender=#{d_gender},d_birthday=#{d_birthday},dp_id=#{dp_id},d_password=#{d_password},d_name=#{d_name}
        where d_id=#{d_id}
    </update>
    <update id="Mea_updateDoctor">
        update tb_doctor
        set d_id=#{d_id},t_id=#{t_id},d_title=#{d_title},d_gender=#{d_gender},d_birthday=#{d_birthday},dp_id=#{dp_id},d_password=#{d_password},d_name=#{d_name}
        where d_id=#{1}
    </update>
    <select id="findDoctorById"  resultType="doctor">
        select *
        from tb_doctor
        where d_id=#{d_id}
    </select>
</mapper>